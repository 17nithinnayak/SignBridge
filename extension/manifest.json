{
  "manifest_version": 3,
  "name": "ISL Translator",
  "version": "1.1",
  "description": "Handles continuous Speech-to-ISL and placeholder ISL-to-Speech.",
  "permissions": [
    "activeTab",
    "scripting",
    "tts" 
  ],
  "host_permissions": [
    "https://signbridgebackend-g6zh.onrender.com/"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "images/icon128.png"
  }
}